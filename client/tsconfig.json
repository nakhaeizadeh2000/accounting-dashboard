{
  "compilerOptions": {
    // Targeting ES2015 (ES6); use polyfills for older browsers if needed
    "target": "ES2015",
    "downlevelIteration": true, // Optional: remove if not needed for iterators
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/Elements/*": ["./components/Elements/*"]
    },
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "shared/types/global.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "ni18n.config.ts" // Fixed potential typo from "ni18n.config.ts.js"
  ],
  "exclude": ["node_modules"]
}

